@model IEnumerable<WebApplication7.Models.DoctorsInfo>
@{
    ViewBag.Title = "Index";
}

<h2>Doctors</h2>
<p>
    <a href="@Url.Action("Create", "Doctors")" class="btn btn-primary btn-large">Create New Doctor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Speciality</th>
            <th>Contact</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Doctors">
        <tr>
            <td data-bind="text: FirstName"></td>
            <td data-bind="text: LastName"></td>
            <td data-bind="text: Speciality"></td>
            <td data-bind="text: PhoneNumber"></td>
        </tr>
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/Scripts/ViewModel/IndexVM.js")
}

